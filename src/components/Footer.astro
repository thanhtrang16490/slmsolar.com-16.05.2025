---

<footer class="bg-gray-900 hidden md:block" aria-labelledby="footer-heading">
  <CTA /> 
  <h2 id="footer-heading" class="sr-only">Footer</h2>

  <div class="mx-auto container px-4 sm:px-6 pb-8 pt-12 sm:pt-16 lg:px-8 lg:pt-20">
    <div class="grid grid-cols-1 gap-y-12 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8">
      {/* Column 1: Company Info */}
      <div class="space-y-6">
        <div>
          <img class="h-10 w-auto sm:h-12" src="/images/logo-solarmax.svg" alt="SoLarMax" />
          <h1 class="text-xl sm:text-2xl font-semibold py-3 uppercase text-white">{companyInfo.name}</h1>
        </div>
        
        <dl class="space-y-4 sm:space-y-6 text-sm sm:text-base text-white">
          <div class="flex gap-x-4">
            <dd class="text-white font-medium lg:hidden">TRỤ SỞ CHÍNH</dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21" />
              </svg>
            </dt>
            <dd class="text-white text-sm sm:text-base">
              {companyInfo.address}
            </dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
            </dt>
            <dd>
              <a class="text-white hover:text-gray-300 transition-colors" href={`tel:${companyInfo.phone}`}>{companyInfo.phone}</a>
            </dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
            </dt>
            <dd>
              <a class="text-white hover:text-gray-300 transition-colors" href={`mailto:${companyInfo.email}`}>{companyInfo.email}</a>
            </dd>
          </div>
        </dl>
      </div>

      {/* Column 2: Warehouse Locations */}
      <div class="space-y-6">
        <h3 class="text-lg font-medium uppercase text-white">Văn phòng kho</h3>
        <div class="grid gap-4 sm:gap-6">
          {locations.map((location) => (
            <div class="relative flex items-start p-3 sm:p-4 rounded-lg bg-gray-800/50 hover:bg-gray-800/70 transition-colors">
              <div class="flex-shrink-0 mr-4">
                <svg
                  width="22"
                  height="20"
                  viewBox="0 0 22 20"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M9.875 15.5C9.875 15.6989 9.79598 15.8897 9.65533 16.0303C9.51468 16.171 9.32391 16.25 9.125 16.25H6.5C6.30109 16.25 6.11032 16.171 5.96967 16.0303C5.82902 15.8897 5.75 15.6989 5.75 15.5C5.75 15.3011 5.82902 15.1103 5.96967 14.9697C6.11032 14.829 6.30109 14.75 6.5 14.75H9.125C9.32391 14.75 9.51468 14.829 9.65533 14.9697C9.79598 15.1103 9.875 15.3011 9.875 15.5ZM15.5 14.75H12.875C12.6761 14.75 12.4853 14.829 12.3447 14.9697C12.204 15.1103 12.125 15.3011 12.125 15.5C12.125 15.6989 12.204 15.8897 12.3447 16.0303C12.4853 16.171 12.6761 16.25 12.875 16.25H15.5C15.6989 16.25 15.8897 16.171 16.0303 16.0303C16.171 15.8897 16.25 15.6989 16.25 15.5C16.25 15.3011 16.171 15.1103 16.0303 14.9697C15.8897 14.829 15.6989 14.75 15.5 14.75ZM21.5 19.25C21.5 19.4489 21.421 19.6397 21.2803 19.7803C21.1397 19.921 20.9489 20 20.75 20H1.25C1.05109 20 0.860322 19.921 0.71967 19.7803C0.579018 19.6397 0.5 19.4489 0.5 19.25C0.5 19.0511 0.579018 18.8603 0.71967 18.7197C0.860322 18.579 1.05109 18.5 1.25 18.5H2V7.25C2 7.11072 2.03879 6.97418 2.11201 6.8557C2.18524 6.73722 2.29001 6.64147 2.41459 6.57918C2.53917 6.51689 2.67863 6.49052 2.81735 6.50303C2.95608 6.51554 3.08857 6.56643 3.2 6.65L8 10.25V7.25C8 7.11072 8.03879 6.97418 8.11201 6.8557C8.18524 6.73722 8.29001 6.64147 8.41459 6.57918C8.53917 6.51689 8.67863 6.49052 8.81735 6.50303C8.95608 6.51554 9.08857 6.56643 9.2 6.65L12.8319 9.37344L13.9156 1.78813C13.9681 1.43127 14.1468 1.10506 14.4193 0.868712C14.6917 0.632364 15.0399 0.501544 15.4006 0.5H17.0994C17.4601 0.501544 17.8083 0.632364 18.0807 0.868712C18.3532 1.10506 18.5319 1.43127 18.5844 1.78813L19.9906 11.6441C19.9906 11.6441 19.9981 11.7172 19.9981 11.75V18.5H20.7481C20.8468 18.4998 20.9445 18.519 21.0357 18.5566C21.1269 18.5941 21.2098 18.6493 21.2797 18.719C21.3495 18.7887 21.4049 18.8714 21.4427 18.9626C21.4805 19.0537 21.5 19.1514 21.5 19.25ZM14.2006 10.4L15.0003 11H18.3856L17.0994 2H15.4006L14.2006 10.4ZM3.5 18.5H18.5V12.5H14.75C14.5877 12.5 14.4298 12.44