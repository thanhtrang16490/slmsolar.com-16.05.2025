---
import Image from "astro/components/Image.astro";
const { aqitems } = Astro.props;


---

<div class="py-16 sm:py-12">
    <div class="mx-auto container ">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h1
                class="text-xl font-bold tracking-tight text-gray-900 sm:text-4xl"
            >
            Dự án tham khảo
        </h1>
        </div>
        <ul
            role="list"
            class="mx-auto mt-6 grid max-w-2xl grid-cols-2 gap-x-4 gap-y-12 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3"
        >
            {
                aqitems.map((item: any) => (
                    <li>
                        <div class="relative">
                            <a
                                href={item.buttonLink}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                            <img 
                                class="aspect-[2/3] w-full rounded-xl object-cover"
                                src={item.imgSrc}
                                alt={item.imgAlt}
                            />
                            </a>
                           
                        </div>
                        <h3 class="mt-2 lg:text-lg sm:text-md text-lg font-semibold leading-6 tracking-tight text-gray-900">
                            {item.heading}
                        </h3>
                    </li>
                ))
            }
        </ul>
    </div>
</div>