---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Nội dung này tạm thời không khả dụng. Chúng tôi đang trong quá trình cập nhật hệ thống." } = Astro.props;
---

<div class="min-h-[60vh] flex flex-col items-center justify-center py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 text-center">
    <div>
      <img
        class="mx-auto h-16 w-auto"
        src="/images/logo-solarmax.svg"
        alt="Solarmax"
      />
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        {title}
      </h2>
      <p class="mt-2 text-base text-gray-600">
        {description}
      </p>
    </div>
    <div class="mt-8">
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
      >
        Quay lại trang chủ
      </a>
    </div>
  </div>
</div> 