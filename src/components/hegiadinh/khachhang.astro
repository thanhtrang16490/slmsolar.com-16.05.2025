---
const colors = [
  'bg-red-500', 'bg-blue-500', 'bg-green-500', 
  'bg-yellow-500', 'bg-purple-500', 'bg-pink-500',
  'bg-indigo-500', 'bg-teal-500', 'bg-orange-500'
];

function getInitials(name: string) {
  return name.split(' ').map(word => word[0]).join('').toUpperCase();
}

function getRandomColor() {
  return colors[Math.floor(Math.random() * colors.length)];
}

const testimonials = [
  {
    content: "Tôi rất hài lòng với hệ thống điện mặt trời SolarMax đã lắp đặt. Không chỉ giúp tiết kiệm chi phí điện hàng tháng, mà còn góp phần bảo vệ môi trường. Đội ngũ kỹ thuật chuyên nghiệp và tận tâm.",
    author: "Nguyễn Văn An",
    location: "Khách hàng tại Hà Nội",
    bgColor: getRandomColor()
  },
  {
    content: "Chất lượng sản phẩm và dịch vụ bảo hành của SolarMax thực sự ấn tượng. Sau 6 tháng sử dụng, hóa đơn tiền điện của gia đình tôi đã giảm đáng kể.",
    author: "Trần Thị Bình",
    location: "Khách hàng tại TP.HCM",
    bgColor: getRandomColor()
  },
  {
    content: "Đội ngũ tư vấn rất nhiệt tình, giải thích chi tiết về sản phẩm và quy trình lắp đặt. Tôi đánh giá cao tính chuyên nghiệp và service minded của SolarMax.",
    author: "Lê Hoàng Cường",
    location: "Khách hàng tại Đà Nẵng",
    bgColor: getRandomColor()
  }
];
---

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto container px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-base/7 font-semibold text-green-600">Đánh giá từ khách hàng</h2>
      <p class="mt-2 text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">Khách hàng nói gì về SolarMax</p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mx-0 lg:max-w-none">
      <div class="flex flex-col md:flex-row gap-8 justify-center items-stretch">
        {testimonials.map((testimonial) => (
          <div class="flex-1 min-w-[300px]">
            <figure class="rounded-2xl bg-gray-50 p-8 text-sm/6 h-full flex flex-col">
              <blockquote class="text-gray-900 flex-grow">
                <p>"{testimonial.content}"</p>
              </blockquote>
              <figcaption class="mt-6 flex items-center gap-x-4">
                <div class={`size-10 rounded-full flex items-center justify-center text-white font-semibold ${testimonial.bgColor}`}>
                  {getInitials(testimonial.author)}
                </div>
                <div>
                  <div class="font-semibold text-gray-900">{testimonial.author}</div>
                  <div class="text-gray-600">{testimonial.location}</div>
                </div>
              </figcaption>
            </figure>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>
  