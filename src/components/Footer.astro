import CTA from '../components/cta.astro';
const locations = [
  {
    name: "Kho Hà Nội",
    address: "Vân Canh, Hoài Đức, Hà Nội",
  },
  {
    name: "Kho Bắc Giang",
    address: "Đường Hoàng Hoa Thám, Tân Yên, Bắc Giang",
  },
  {
    name: "Kho Thanh Hoá",
    address: "Đường Kim Xuân, Hoằng Hoá, Thanh Hoá",
  },
